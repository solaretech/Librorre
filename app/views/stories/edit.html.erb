<div class="container">
  <div class="row">
    <div id="content-left" class="content-area col-md-12 col-xs-12">
      <div class ="content-box">
        <h2 class="content-box-head">ストーリーの編集</h2>
        <%= form_for @story do |f| %>
          <div class="content-box-body">
            <%= render '/layouts/validation_error', model: f.object %>
            <h4><%= f.text_field :title, placeholder: "ストーリー名を入力", class:'title-field' %></h4>
            <div class="tag-list">
              タグ：
                <ul id="story-tags">
                </ul>
                <%= hidden_field_tag :category_hidden,@category_list %>
            </div>
            <div class="story-topic">
              <%= f.text_area :content, class: "body-textarea" %>
            </div>
            <div>
              <%= link_to "ストーリーの削除", story_path(@story), method: :delete, data:{confirm: '本当に削除しますか？'}, class: 'btn btn-danger btn-half' %>
            </div>
          </div>
          <div class="content-box-foot">
            <div>
              <%= link_to "戻る", story_path(@story), class: "btn btn-half btn-sub2" %> <%= f.submit "保存", class: "btn btn-half btn-sub" %>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
